<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <p><%= link_to task.title, task_path(task) %> - <%= task.details %> - <%= task.completed %>- <%= link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
  </li>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
